/* 学习内容设置页面样式 */
.content-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: white;
}

.header .title {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.header .date {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 内容区域 */
.content-section {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.required {
  color: #ff4757;
  font-size: 32rpx;
  margin-left: 5rpx;
}

.content-input {
  position: relative;
}

.content-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  border: 2rpx solid #e9ecef;
  box-sizing: border-box;
}

.content-textarea:focus {
  border-color: #667eea;
  background: white;
}

.char-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 快捷操作 */
.quick-actions {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.action-title {
  margin-bottom: 20rpx;
}

.action-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  min-width: 200rpx;
  background: linear-gradient(135deg, #f093fb, #f5576c);
  color: white;
  border-radius: 12rpx;
  border: none;
  padding: 20rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn:nth-child(2) {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
}

.action-btn:nth-child(3) {
  background: linear-gradient(135deg, #43e97b, #38f9d7);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: bold;
}

/* 模板弹窗 */
.template-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  position: relative;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f8f9fa;
  color: #666;
  font-size: 40rpx;
  font-weight: bold;
  cursor: pointer;
}

.modal-close:active {
  background: #e9ecef;
}

/* 模板列表 */
.template-list {
  max-height: 400rpx;
  overflow-y: auto;
  padding: 20rpx;
}

.template-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.template-item:active {
  background: #e9ecef;
  border-color: #667eea;
}

.template-info {
  flex: 1;
  margin-right: 20rpx;
}

.template-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.template-content {
  font-size: 24rpx;
  color: #666;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.template-time {
  font-size: 22rpx;
  color: #999;
}

/* 创建模板表单 */
.create-form {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #e9ecef;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  border: 2rpx solid #e9ecef;
  box-sizing: border-box;
}

/* 模态框底部 */
.modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #e9ecef;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.modal-btn:active {
  transform: scale(0.95);
}

.modal-btn.cancel {
  background: #e9ecef;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.modal-btn.manage {
  background: linear-gradient(135deg, #f093fb, #f5576c);
  color: white;
}

/* 备注区域 */
.notes-section {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.notes-input {
  position: relative;
}

.notes-textarea {
  width: 100%;
  min-height: 120rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  border: 2rpx solid #e9ecef;
  box-sizing: border-box;
}

.notes-textarea:focus {
  border-color: #667eea;
  background: white;
}

/* 底部操作 */
.bottom-actions {
  padding: 30rpx 0;
  text-align: center;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  margin-bottom: 20rpx;
}

.save-btn:active:not([disabled]) {
  transform: scale(0.98);
}

.save-btn[disabled] {
  background: #e9ecef;
  color: #6c757d;
}

.action-tips {
  color: #999;
  font-size: 24rpx;
} 