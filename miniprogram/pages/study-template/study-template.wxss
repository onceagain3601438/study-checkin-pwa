/* 学习模板管理页面样式 */
.template-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 添加模板按钮 */
.add-section {
  margin-bottom: 30rpx;
}

.add-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  color: white;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s;
}

.add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(79, 172, 254, 0.2);
}

.add-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

.add-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 模板列表 */
.template-list {
  margin-bottom: 30rpx;
}

.template-item {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  transition: all 0.3s;
}

.template-item:active {
  transform: scale(0.98);
}

.template-content {
  margin-bottom: 20rpx;
}

.template-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.template-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.template-date {
  font-size: 24rpx;
  color: #999;
}

.template-body {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
  border-left: 4rpx solid #667eea;
}

.template-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 模板操作按钮 */
.template-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.95);
}

.edit-btn {
  background: linear-gradient(135deg, #f093fb, #f5576c);
  color: white;
}

.delete-btn {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 模板弹窗 */
.template-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  position: relative;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f8f9fa;
  color: #666;
  font-size: 40rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.modal-close:active {
  background: #e9ecef;
}

/* 表单样式 */
.modal-body {
  padding: 30rpx;
  max-height: 500rpx;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.required {
  color: #ff4757;
  font-size: 28rpx;
  margin-left: 5rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #e9ecef;
  box-sizing: border-box;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  border: 2rpx solid #e9ecef;
  box-sizing: border-box;
  transition: all 0.3s;
}

.form-textarea:focus {
  border-color: #667eea;
  background: white;
}

.char-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 模态框底部 */
.modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #e9ecef;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.modal-btn:active:not([disabled]) {
  transform: scale(0.95);
}

.cancel-btn {
  background: #e9ecef;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.confirm-btn[disabled] {
  background: #e9ecef;
  color: #6c757d;
}

/* 使用提示 */
.tips-section {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.tips-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.tips-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.tips-content {
  margin-left: 42rpx;
}

.tip-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
} 